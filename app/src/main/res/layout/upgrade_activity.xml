<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <Button
        android:id="@+id/buyHoublonBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        android:layout_marginTop="93dp"
        android:text="BUY"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true" />

    <Button
        android:id="@+id/backBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_marginTop="10dp"
        android:text="BACK"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:id="@+id/houblonText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="49dp"
        android:text="Houblon field"
        android:layout_alignBaseline="@+id/buyHoublonBtn"
        android:layout_alignBottom="@+id/buyHoublonBtn"
        android:layout_toEndOf="@+id/buyHoublonBtn"
        android:layout_marginStart="15dp" />

    <TextView
        android:id="@+id/houblonPrice"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="50 beers"
        android:layout_marginLeft="49dp"
        android:layout_marginStart="24dp"
        android:layout_alignBaseline="@+id/houblonText"
        android:layout_alignBottom="@+id/houblonText"
        android:layout_toEndOf="@+id/houblonText" />

    <TextView
        android:id="@+id/houblonCounter"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/houblonPrice"
        android:layout_alignBottom="@+id/houblonPrice"
        android:layout_toEndOf="@+id/houblonPrice"
        android:layout_marginLeft="49dp"
        android:text="0" />

    <TextView
        android:id="@+id/beerCounter"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="49dp"
        android:text="You have 0 beers"
        android:layout_marginTop="31dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

</RelativeLayout>